{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "ignoreDeps": [
    "mypy"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchFileNames": [
        "pyproject.toml"
      ],
      "enabled": true
    }
  ]
}
